<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="proyectohabitos.example.neita.habitos.Statistics.FrmStatistics"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1.4"
                android:labelFor="@+id/lala"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/week_pbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="50dp"
                            app:cpb_background_progressbar_color="#B2DFDB"
                            app:cpb_background_progressbar_width="25dp"
                            app:cpb_progressbar_color="@color/colorPrimary"
                            app:cpb_progressbar_width="20dp" />

                        <TextView
                            android:id="@+id/frm_sta_txt_sem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text="Semanal"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/frm_sta_txt_per_sem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="0%"
                            android:textSize="36sp" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1.4"
                android:labelFor="@+id/lala"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/month_pbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="50dp"
                            app:cpb_background_progressbar_color="#B2DFDB"
                            app:cpb_background_progressbar_width="25dp"
                            app:cpb_progressbar_color="@color/colorPrimary"
                            app:cpb_progressbar_width="20dp" />

                        <TextView
                            android:id="@+id/frm_sta_txt_men"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text="Mensual"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/frm_sta_txt_per_mont"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="0%"
                            android:textSize="36sp" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:elevation="24dp"
            android:labelFor="@+id/lala"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="183dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/frm_sta_txt_glob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="Anual"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/frm_sta_txt_per_glob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="0%"
                    android:textSize="36sp" />
            </LinearLayout>

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/global_pbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="210dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:cpb_background_progressbar_color="#B2DFDB"
                app:cpb_background_progressbar_width="25dp"
                app:cpb_progressbar_color="@color/colorPrimary"
                app:cpb_progressbar_width="20dp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.widget.LinearLayout>
