<?xml version="1.0" encoding="utf-8"?>
<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="proyectohabitos.example.neita.habitos.Task.FrmTask">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_add_task_lbl_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/card_view"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/card_view"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="70dp"
                    android:layout_weight="1"
                    android:text="Actividad"
                    android:textAllCaps="true"
                    android:textColor="@color/cardview_light_background"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/activity_add_task_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/activity_add_task_lbl_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cardview_light_background"
                        android:ems="10"
                        android:hint="Tocar piano"
                        android:inputType="textPersonName"
                        android:textColor="@color/cardview_light_background"
                        android:textColorHighlight="@color/cardview_shadow_start_color"
                        android:textColorHint="?attr/colorButtonNormal"
                        android:textSize="24sp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/activity_add_task_lbl_name"
                        tools:textSize="24sp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:elevation="0dp"
                    android:layout_gravity="top"
                    android:padding="@dimen/fab_margin"
                    android:paddingBottom="@dimen/fab_margin"
                    android:paddingTop="@dimen/fab_margin">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="54dp"
                                    android:layout_height="19dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="16dp"
                                    android:text="Repetir"
                                    android:textAllCaps="true"
                                    android:textSize="12sp"
                                    app:layout_constraintLeft_toRightOf="@+id/imageButton"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageButton
                                    android:id="@+id/imageButton"
                                    android:layout_width="17dp"
                                    android:layout_height="18dp"
                                    android:layout_marginLeft="26dp"
                                    android:layout_marginStart="26dp"
                                    android:layout_marginTop="16dp"
                                    android:adjustViewBounds="true"
                                    android:background="@android:color/transparent"
                                    android:cropToPadding="true"
                                    android:elevation="0dp"
                                    android:scaleType="fitCenter"
                                    android:tint="?android:attr/colorControlNormal"
                                    android:visibility="visible"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/calendar" />

                            </android.support.constraint.ConstraintLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <CheckBox
                                android:id="@+id/activity_add_task_chk_lun"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="8dp"
                                android:checked="false"
                                android:text="Lun"
                                android:textSize="12sp" />

                            <CheckBox
                                android:id="@+id/activity_add_task_chk_mierc"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="8dp"
                                android:text="Mierc"
                                android:textSize="12sp" />

                            <CheckBox
                                android:id="@+id/activity_add_task_chk_vier"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="8dp"
                                android:text="Viern"
                                android:textSize="12sp" />

                            <CheckBox
                                android:id="@+id/activity_add_task_chk_dom"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="8dp"
                                android:text="Dom"
                                android:textSize="12sp"
                                app:layout_constraintVertical_bias="0.057" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <CheckBox
                                android:id="@+id/activity_add_task_chk_mar"
                                android:layout_width="57dp"
                                android:layout_height="25dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginStart="45dp"
                                android:text="Mar"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent" />

                            <CheckBox
                                android:id="@+id/activity_add_task_chk_juev"
                                android:layout_width="57dp"
                                android:layout_height="25dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:stretchColumns="2"
                                android:text="Juev"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent" />

                            <CheckBox
                                android:id="@+id/activity_add_task_chk_sab"
                                android:layout_width="59dp"
                                android:layout_height="25dp"
                                android:layout_alignLeft="@+id/activity_add_task_chk_vier"
                                android:layout_alignStart="@+id/activity_add_task_chk_vier"
                                android:layout_below="@+id/activity_add_task_chk_vier"
                                android:layout_marginBottom="@dimen/fab_margin"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:text="Sáb"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/activity_add_task_chk_juev" />
                        </TableRow>

                    </TableLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_gravity="top"
                    android:id="@+id/card_view_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/card_view"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Switch
                                android:id="@+id/activity_add_task_switch_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginTop="12dp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginBottom="16dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:text="Cronómetro"
                                android:textAllCaps="true"
                                android:textSize="12sp"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintLeft_toRightOf="@+id/activity_add_task_reminder2"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageButton
                                android:id="@+id/activity_add_task_reminder2"
                                android:layout_width="17dp"
                                android:layout_height="18dp"
                                android:layout_marginBottom="16dp"
                                android:layout_marginLeft="26dp"
                                android:layout_marginStart="26dp"
                                android:layout_marginTop="16dp"
                                android:adjustViewBounds="true"
                                android:background="@android:color/transparent"
                                android:cropToPadding="true"
                                android:elevation="0dp"
                                android:scaleType="fitCenter"
                                android:tint="?android:attr/colorControlNormal"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/timer" />

                        </android.support.constraint.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">


                                <ImageView
                                    android:id="@+id/activity_add_task_image_chrono"
                                    android:layout_width="16dp"
                                    android:layout_height="14dp"
                                    android:layout_marginBottom="18dp"
                                    android:layout_marginLeft="54dp"
                                    android:adjustViewBounds="true"
                                    android:cropToPadding="true"
                                    android:paddingBottom="0dp"
                                    android:paddingTop="0dp"
                                    android:scaleType="fitCenter"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="1.0"
                                    app:srcCompat="@drawable/timer2"
                                    tools:layout_editor_absoluteX="49dp"
                                    tools:layout_editor_absoluteY="6dp" />

                                <TextView
                                    android:id="@+id/activity_add_task_chrono"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginLeft="0dp"
                                    android:foregroundGravity="fill"
                                    android:paddingBottom="0dp"
                                    android:paddingTop="1dp"
                                    android:singleLine="false"
                                    android:text="Cronómetro"
                                    android:textAlignment="viewStart"
                                    android:textColor="@android:color/background_dark"
                                    android:textSize="14sp"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toRightOf="@+id/activity_add_task_image_chrono" />
                            </android.support.constraint.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_gravity="top"
                    android:id="@+id/card_view_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/card_view"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Switch
                                android:id="@+id/activity_add_task_switch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginTop="12dp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/activity_add_task_txt_alarm_tittle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginBottom="0dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:paddingBottom="16dp"
                                android:text="Alarma"
                                android:textAllCaps="true"
                                android:textSize="12sp"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.025"
                                app:layout_constraintLeft_toRightOf="@+id/activity_add_task_reminder3"
                                app:layout_constraintRight_toLeftOf="@+id/activity_add_task_switch"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.666" />

                            <ImageButton
                                android:id="@+id/activity_add_task_reminder3"
                                android:layout_width="17dp"
                                android:layout_height="18dp"
                                android:layout_marginBottom="0dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginStart="26dp"
                                android:layout_marginTop="16dp"
                                android:adjustViewBounds="true"
                                android:background="@android:color/transparent"
                                android:cropToPadding="true"
                                android:elevation="0dp"
                                android:scaleType="fitCenter"
                                android:tint="?android:attr/colorControlNormal"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/alarm"
                                app:layout_constraintVertical_bias="0.0" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/activity_add_task_ring"
                                android:layout_width="16dp"
                                android:layout_height="14dp"
                                android:layout_marginBottom="16dp"
                                android:layout_marginLeft="54dp"
                                android:layout_marginTop="8dp"
                                android:adjustViewBounds="true"
                                android:cropToPadding="true"
                                android:paddingBottom="3dp"
                                android:paddingTop="0dp"
                                android:scaleType="fitCenter"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="1.0"
                                app:srcCompat="@drawable/bell"
                                tools:layout_editor_absoluteX="49dp"
                                tools:layout_editor_absoluteY="6dp" />

                            <TextView
                                android:id="@+id/activity_add_task_reminder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginBottom="16dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="0dp"
                                android:foregroundGravity="fill"
                                android:paddingBottom="0dp"
                                android:singleLine="false"
                                android:text="Recordatorio"
                                android:textAlignment="viewStart"
                                android:textColor="@android:color/background_dark"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/activity_add_task_ring"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="1.0" />
                        </android.support.constraint.ConstraintLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton


            android:id="@+id/activity_add_task_add_button"
            android:layout_width="68dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:clickable="true"
            android:src="@drawable/ok"
            android:tint="@android:color/background_light"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:rippleColor="@android:color/background_light"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintHorizontal_bias="0.952" />

    </android.support.constraint.ConstraintLayout>

</android.widget.FrameLayout>
